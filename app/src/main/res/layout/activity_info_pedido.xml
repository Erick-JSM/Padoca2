<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoPedidoActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/img_infoPedido"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCodPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Codigo do Pedido:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNomeFunc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Funcionario:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNomeCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cliente:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCodProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Produto:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textQtdProd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantidade:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDataPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data:"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="275dp"
                android:layout_height="310dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textCodPedido2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNomeFunc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNomeCliente2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textCodProd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textQtdProd2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_atualizarPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="#76FF03"
        android:text="Atualizar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_excluirPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FF1744"
        android:text="Excluir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atualizarPedido" />

</androidx.constraintlayout.widget.ConstraintLayout>